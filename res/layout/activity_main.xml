<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xgps="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".AnalogvideoActivity2" >
    
    
    <!-- <SurfaceView
	android:id="@+id/SurfaceViewPlay"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:scaleType="fitCenter"/> -->
				
         
        <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
                
        <SurfaceView
            android:id="@+id/SurfaceViewPlay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        

        <LinearLayout
            android:id="@+id/layout_memo"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#b0000000"
            android:orientation="horizontal" >
			<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="  "
                android:textColor="@color/white"
                android:textSize="15dp" />
			
            <com.ctrl.XImageBtn
           android:id="@+id/btnPic"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           xgps:NormalImage="@drawable/btn_snap0"
           xgps:SelectedImage="@drawable/btn_snap0"
           android:layout_gravity="center"
           android:layout_weight="1"
           />

	       <com.ctrl.XImageBtn
	           android:id="@+id/btnRecord"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           xgps:NormalImage="@drawable/btn_record0"
	           xgps:SelectedImage="@drawable/btn_record0"
	           android:layout_gravity="center"
	           android:layout_weight="1"
	           />
	       
	       <com.ctrl.XImageBtn
           android:id="@+id/btnScreen"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           xgps:NormalImage="@drawable/btn_screen"
           xgps:SelectedImage="@drawable/btn_screen"
           android:layout_gravity="center"
           android:focusable="false"
           />
	       
	       <com.ctrl.XImageBtn
           android:id="@+id/btnStop"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           xgps:NormalImage="@drawable/btn_stop0"
           xgps:SelectedImage="@drawable/btn_stop0"
           android:layout_gravity="center"
           android:focusable="false"
           />
	       
	       <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="  "
                android:textColor="@color/white"
                android:textSize="15dp" />
	       
        </LinearLayout>
        
        <TextView
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:text="  正在预览..."
		       android:gravity="center"
		       android:textSize="@dimen/text_size_16"
		       android:id="@+id/tooltip"
		       android:textColor="@color/blue"
		       /> 
    </FrameLayout>

</LinearLayout>