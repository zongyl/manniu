        android:text="收藏页面！！"
        android:textSize="20dp"
        android:textColor="@color/black" />
    
    <Button
        android:id="@+id/btn_ttest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEST" />
    
    <ImageView
        android:id="@+id/iv_ttest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
</LinearLayout>
