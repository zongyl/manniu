   <LinearLayout 
        
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
   
    <TextView 
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sharemsg"
        android:textColor="@color/dark"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal|center_vertical"/>
  
	
     <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:stretchColumns="1"
            android:background="@drawable/bk_setting_wnd"  >
	    
	    <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" >
				<TextView
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:text="@string/title"
		            android:gravity="left|center_vertical"
		            android:textColor="@color/blue_menu"
		            android:textSize="@dimen/text_size_15"
		            android:paddingLeft="3dp"/>
				<TextView android:id="@+id/titleForce" style="@style/forceInput"/>
				
               <EditText
                   android:id="@+id/share_title"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:layout_marginLeft="8.0dip"
                   android:layout_weight="1"
                   android:background="@null"
                   android:ems="10"
                   android:hint="@string/title_hint"
                   android:maxLength="16"
                   android:maxLines="1"
                   android:selectAllOnFocus="true"
                   android:singleLine="true"
                   android:textColor="@color/black"
                   android:cursorVisible="true"
	               android:textCursorDrawable="@null"
                   android:textSize="@dimen/text_size_15" >
               </EditText>
           </LinearLayout>
           
           <View android:layout_width="fill_parent"
	   		  android:layout_height="0.5dp"
	   		  android:layout_marginTop="2dp"
	   		  android:layout_marginBottom="5dp"
	   		  android:background="#D4D4D4"/>
           
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="@string/group"
	            android:background="@null"
	            android:textColor="@color/blue_menu"
	            android:textSize="@dimen/text_size_15"
	            android:gravity="left|center_vertical"
	            android:paddingLeft="3dp"/>
	        <TextView android:id="@+id/groupForce" style="@style/forceInput"/>
	        <TextView
	            android:hint="@string/group_hint"
	            android:background="@null"
	            android:id="@+id/share_type"
	            android:textColor="@color/dark"
	            android:textSize="@dimen/text_size_15"
	            android:layout_width="fill_parent"
	            android:gravity="center_vertical|left"
	            android:layout_height="45dp"
	            android:layout_marginLeft="8dp"
	         />

	    </LinearLayout>
