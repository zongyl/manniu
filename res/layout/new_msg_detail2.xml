<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xgps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	 <com.jfeinstein.jazzyviewpager.JazzyViewPager  
       android:id="@+id/new_pager_list"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"/>
	<LinearLayout 
	    android:layout_alignParentTop="true"
	    android:id="@+id/msg_detail_header"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation = "horizontal">
	    <ImageView 
	        android:id="@+id/new_msg_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/message_back"/>
	    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
	    <ImageView 
	        android:id="@+id/new_msg_menu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/common_title_more_dark"/>
	</LinearLayout>
	
	    
   
	
	
	
	        
	<RelativeLayout 
	    android:layout_alignParentBottom="true"
	    android:id="@+id/msg_detail_footer"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_alignParentBottom="true"
	        >
	        <!-- 按键 -->
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="left"
	            android:orientation="horizontal">
	            <TextView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="  "/>
	                <com.ctrl.XImageBtn
	                android:id="@+id/alarm_play"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:focusable="false"
	                android:layout_weight="1"
	                xgps:NormalImage="@drawable/alarm_play"
	                xgps:SelectedImage="@drawable/alarm_play" />
	             <com.ctrl.XImageBtn
	                android:id="@+id/alarm_down"
	                android:layout_width="fill_parent"
           			android:layout_height="wrap_content"
	                android:focusable="false"
	                android:layout_weight="1"
	                xgps:NormalImage="@drawable/alarm_download"
	                xgps:SelectedImage="@drawable/alarm_download" />
	            <com.ctrl.XImageBtn
	                android:id="@+id/alarm_share"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:focusable="false"
	                android:layout_weight="1"
	                xgps:NormalImage="@drawable/alarm_shard"
	                xgps:SelectedImage="@drawable/alarm_shard" />
	            <TextView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="  "/>
	        </LinearLayout>
	        
	        <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="  "
                android:textColor="@color/white"
                android:textSize="15dp" />
	        
	     <TextView 
	        android:id="@+id/msg_title"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:text="移动侦测报警" 
	        android:layout_gravity="center_vertical"/>
	    <TextView 
	        android:id="@+id/msg_time"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"/>
	    <TextView 
	        android:id="@+id/msg_devName"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical" 
	        android:layout_marginBottom="10dp"/>
	    <!-- <Button 
	        android:id="@+id/new_msg_video"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"  
	        android:text=" 消息录像" 
	        android:layout_gravity="center" 
	        android:background="@drawable/button_nor" 
	        android:layout_marginBottom="10dp"/> -->
	    </LinearLayout>
	</RelativeLayout>
</RelativeLayout>
