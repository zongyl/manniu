<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xgps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/play_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white">

     <FrameLayout 
        android:id="@+id/webTitle"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@drawable/common_title"
        android:layout_gravity="center_vertical|center_horizontal"> 
       
        <com.ctrl.XImageBtn 
        android:id="@+id/web_cancel"   
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:scaleType="fitCenter"
        android:onClick="onClick"
        xgps:NormalImage="@drawable/title_back_selector"/> 
         
		<TextView android:id="@+id/web_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|center_horizontal"
			android:textColor="@color/black"/>
         
		<com.ctrl.XImageBtn 
			android:id="@+id/web_more"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="top|right"
			android:scaleType="fitCenter"
			android:onClick="onClick"
			xgps:NormalImage="@drawable/common_title_more"/> 
        
        <ProgressBar 
			android:id="@+id/progressBar2"
			android:layout_width="fill_parent"
			android:layout_height="2dp"
			android:progressDrawable="@drawable/barcolor"
			android:layout_gravity="bottom"
			style="?android:attr/progressBarStyleHorizontal"/> 
     </FrameLayout>
       	
     <FrameLayout
        android:id="@+id/video_fullView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#CC0000"
        android:visibility="gone" >
    </FrameLayout>


    <Button
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/refresh_web1"
        android:text="@string/click_refresh"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     
    <WebView
        android:id="@+id/webView02"
        android:layout_width="fill_parent"
        android:layout_weight="6"
       	android:layout_height="0dp"
       	android:visibility="visible"
        android:scrollbars="none" />
    
	<TextView   
	    android:id="@+id/line0"
	    android:layout_marginLeft="7dp" 
	    android:layout_marginRight="7dp"
	    style="@style/DetailBaseline"/>
	 
    <LinearLayout
	    android:padding="0.5dp"
	    android:background="@color/white"
        android:id="@+id/comment_tools"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/comment_bar"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:text="@string/commentTip"
    	    android:visibility="visible"
    	    android:gravity="center"
    	    android:textSize="15sp"
	        android:textColor="@color/white"
            android:layout_alignParentLeft = "true"/>
            
		<TextView 
	        android:layout_width="1dip" 
			android:layout_height="fill_parent"
			android:background="#66CCFF"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:orientation="horizontal"/>

        <TextView
            android:id="@+id/information_bar"
            android:layout_weight="1"	
            android:layout_width ="0dp"	
            android:layout_height="fill_parent"
     		android:layout_gravity="right"
            android:layout_marginRight="6dp"
            android:text="@string/profileTip"
    	    android:visibility="gone"
    	    android:gravity="center"
    	    android:textSize="15sp"
	        android:textColor="#ff888888"
            android:layout_alignParentRight = "true"/>
    </LinearLayout>

   	<TextView 
   	    android:id="@+id/line1"  
	    android:layout_marginLeft="7dp" 
	    android:layout_marginRight="7dp"
	    style="@style/DetailBaseline"/> 	  
   	
	<WebView
       	android:id="@+id/webView03"
       	android:layout_weight="8"
      		android:layout_height="0dp"
      	android:layout_width="fill_parent"
      	android:visibility="visible"        
      	android:background="@color/white"/>
	
    <LinearLayout
        android:id="@+id/information_page"
        android:layout_width="fill_parent"
       	android:layout_weight="8"
       	android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone">
        
        <TextView
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
    	    android:gravity="center"
        	android:id="@+id/comment_title"
            android:layout_gravity="center_vertical"
            android:layout_height="0dp"
            android:textSize="18sp"
            android:textColor="#ff888888"
            android:layout_width="fill_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:inputType="textMultiLine"
    	    android:gravity="left"
        	android:id="@+id/comment_content"
            android:layout_gravity="center_vertical"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:textColor="#ff888888"
            android:layout_width="fill_parent"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/line2" 
    		android:layout_marginLeft="7dp" 
    		android:layout_marginRight="7dp"
    		style="@style/DetailBaseline"/>  
    		
       <com.amap.api.maps2d.MapView
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
    	    android:gravity="center"
        	android:id="@+id/comment_map"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_height="0dp"
            android:layout_weight="5"/>
    </LinearLayout>
    
     <LinearLayout 
        android:visibility="gone"
        android:id="@+id/share_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical">
    	
  	    <LinearLayout 
  	        android:orientation="horizontal"
        	android:layout_width="fill_parent"
        	android:layout_height="0dp"
        	android:layout_weight="2">
	  	    <TextView
	    	    android:gravity="center"
	    	    android:text="@string/sendComment"
	    	    android:visibility="visible"
	            android:layout_gravity="center_vertical"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"/>    
  	    </LinearLayout>
  	    
  	    <LinearLayout
  	        android:orientation="horizontal"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="4">
	  	    
	        <ImageView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/common_title_cancel"
	            android:id="@+id/cancel_com"/>
	        
	        <com.views.EditTextPreIme 
	            android:inputType="text"
	            android:imeOptions="actionDone" 
	            android:singleLine="true"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:textSize="18sp"
	            android:textColor="@color/black"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/radius_corner"
	            android:id="@+id/edit_com"/>
	        
	        <ImageView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/common_title_confirm"
	            android:id="@+id/confirm_com"/>
        </LinearLayout>
  	    <TextView
			android:gravity="center"
			android:text=" "
			android:visibility="visible"
			android:layout_gravity="center_vertical"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1"/>    
    </LinearLayout>
    <TextView   
        android:id="@+id/line3"
	    android:layout_marginLeft="7dp" 
	    android:layout_marginRight="7dp"
	    style="@style/DetailBaseline"/>
	<LinearLayout
	    android:padding="5dp"
	    android:background="@color/white"
        android:id="@+id/square_tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
    	<Button
    	    android:layout_marginLeft="7dp"
    	    android:id="@+id/square_com"
    	    android:layout_width="50dp"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="center_vertical"
    	    android:layout_marginRight="5dp"
    	    android:layout_weight="0.39"
    	    android:background="@drawable/label_bg_ling"
    	    android:gravity="center"
    	    android:text="@string/commentBtn"
    	    android:visibility="visible" />
    	 
    	<ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/like" />
    
    	 <ImageView 
            android:layout_marginRight="5dp"
            android:id="@+id/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/collection"/>
    	 <ImageView 
           	
            android:layout_marginRight="5dp"
            android:id="@+id/previously"
    	    android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/previously"/>
    	 <ImageView 
            android:layout_marginRight="7dp"
            android:id="@+id/square_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/square_share"/>
    </LinearLayout>
 
    <TextView   
        android:id="@+id/line4"
	    android:layout_marginLeft="7dp" 
	    android:layout_marginRight="7dp"
	    style="@style/DetailBaseline"/>
  </LinearLayout>
